@model Core.Models.UserLoginInfo

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Login";
}

<div class="text-center w-100">
    <main class="form-signin">

        <form method="post" asp-controller="UserInfo" asp-action="Login">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password">
                <label asp-for="Password">Password</label>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

            <div class="mt-1">
                <a asp-action="Register">Register</a>
            </div>
        </form>
    </main>
</div>