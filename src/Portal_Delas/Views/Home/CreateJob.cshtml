﻿@using Core.Models;
@using Portal_Delas.Models;
@using Core.Data;
@model JobInfo


<h2>Create</h2>
<div class="row">
    <div class="col-md-4">
<form method="post" asp-controller="JobInfo" asp-action="CreateJob">

            <div class="form-group">
                <label asp-for="@Model.JobTitle" class="control-label"></label>
                <input asp-for="@Model.JobTitle" class="form-control" />
                <span asp-validation-for="@Model.JobTitle" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.JobDescription" class="control-label"></label>
                <input asp-for="@Model.JobDescription" class="form-control"/>
                <span asp-validation-for="@Model.JobDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.JobAddress" class="control-label"></label>
                <input asp-for="@Model.JobAddress" class="form-control" />
                <span asp-validation-for="@Model.JobAddress" class="text-danger"></span>
            </div>
                

            <div class="form-floating mb-3">
                <select asp-for="JobCategory" class="form-control" placeholder="Select one">
                    <option disabled selected>--- SELECT ---</option>
                    <option>Saúde</option>
                    <option>Hotelaria</option>
                    <option>Tecnologia</option>
                    <option>Educação</option>
                </select>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Criar</button>

           
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}