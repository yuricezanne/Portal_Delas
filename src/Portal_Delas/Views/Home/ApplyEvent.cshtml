@using Core.Models
@model List<EventInfo>

@{
    ViewData["Title"] = "Apply to an open position!";
}

<div class="text-center">
    <h5>Listed Events</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Event title</th>
                <th>Event description</th>
                <th>Event address</th>
                <th>Post date</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>@item.EventTitle</span>
                    </td>
                    <td>
                        <span>@item.EventDescription</span>
                    </td>
                    <td>
                        <span>@item.EventAddress</span>
                    </td>
                    <td>
                        <span>@item.EventDate</span>
                    </td>
                    <td>
                        <span>@item.EventType</span>
                    </td>
                    <form id="myForm">
                    <td>
                        <button type="button" onclick="printMessage()">Apply</button>
                    </td>
                    </form>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mb-3">
    <input class="btn btn-primary" value="Return" onclick="history.go(-1);return false;">
</div>

@section scripts {
    <script>
        function printMessage() {
            alert('Applied successfully');
        }
    </script>
}