@using Core.Models
@model List<JobEventUserInfoModel>

@{
	ViewData["Title"] = "Apply to an open position!";
}

<div class="text-center">
	<h5>Open Positions</h5>

	<form method="get" action="@Url.Action("ApplyJob", "Home")">
		<label for="categoryFilter">Filter by Category:</label>
		<select id="categoryFilter" name="categoryFilter">
			<option value="">All Categories</option>
			@foreach (var category in Model.Select(item => item.JobCategory).Distinct())
			{
					<option value="@category">@category</option>
			}
		</select>
		<button type="submit">Apply Filter</button>
	</form>

	<table class="table">
		<thead>
			<tr>
				<th>Job title</th>
				<th>Company Name</th>
				<th>Job description</th>
				<th>Post date</th>
				<th>Category</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
					<tr>
						<td>
							<span>@item.JobTitle</span>
						</td>
						<td>
							<span>@item.CompanyName</span>
						</td>
						<td>
							<span>@item.JobDescription</span>
						</td>
						<td>
							<span>@item.JobCreationDate</span>
						</td>
						<td>
							<span>@item.JobCategory</span>
						</td>
						<td>
							<button type="submit">Apply</button>
						</td>
					</tr>
			}
		</tbody>
	</table>
</div>

<div>
	<input type="button" value="Return" onclick="history.go(-1);return false;">
</div>
